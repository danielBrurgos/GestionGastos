@model IEnumerable<ReporteMensualViewModel>
@{
    ViewData["Title"] = "Reporte Mensual";

    // Función local para formatear
    string Formatear(decimal cantidad)
    {
        return cantidad.ToString("C");
    }
}

<h1 class="mb-4">Reporte Mensual (Octubre 2025)</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Categoría</th>
                <th>Presupuesto</th>
                <th>Gasto Real</th>
                <th>Diferencia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Categoria</td>
                    <td>@Formatear(item.Presupuesto)</td>
                    <td>@Formatear(item.Gasto)</td>
                    <td>@Formatear(item.Diferencia)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        No se encontraron datos para el reporte de este mes.
    </div>
}